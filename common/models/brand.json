{
  "name": "Brand",
  "base": "PersistedModel",
  "idInjection": true,
  "options": {
    "validateUpsert": true
  },
  "properties": {
    "name": {
      "type": "string",
      "required": true
    },
    "total": {
      "type": "number",
      "default": 0
    },
    "daily": {
      "type": "number",
      "default": 0
    },
    "position": {
      "type": "number",
      "default": 0
    }
  },
  "validations": [],
  "scope":{
    "order": "total DESC"
  },
  "relations": {
    "drinks": {
      "type": "hasMany",
      "model": "Drink",
      "foreignKey": ""
    }
  },
  "acls": [
    {
      "accessType": "*",
      "principalType": "ROLE",
      "principalId": "$everyone",
      "permission": "DENY"
    },
    {
      "accessType": "READ",
      "principalType": "ROLE",
      "principalId": "$everyone",
      "permission": "ALLOW"
    },
    {
      "accessType": "WRITE",
      "principalType": "ROLE",
      "principalId": "$authenticated",
      "permission": "ALLOW"
    },
    {
      "accessType": "*",
      "principalType": "ROLE",
      "principalId": "admin",
      "permission": "ALLOW"
    }
  ],
  "methods": {}
}
